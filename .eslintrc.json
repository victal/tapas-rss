{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:cypress/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "it": true,
        "describe": true,
        "expect": true,
        "sinon": true,
        "before": true,
        "beforeEach": true,
        "after": true,
        "afterEach": true,
        "context": true,
        "cy": true,
        "Cypress": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["cypress", "mocha"],
    "rules": {
        "mocha/no-exclusive-tests": "error"
    },
    "overrides": [{
        "files": ["**/*.spec.js"],
        "rules": {
            "no-unused-expressions": "off"
        }
    }]
}
